<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="school.modelInfoBtn" t-inherit="web.FormView">
        <xpath expr="//div[@t-att-class='className']/div/Layout/t[@t-set-slot='layout-buttons']" position="inside">
            <button id="mybtn" class="btn btn-outline-dark" t-on-click="actionInfoForm">Info
            </button>
        </xpath>
    </t>
    <t t-name="school.modelHrBtn" t-inherit="hr_expense.ListButtons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_list_buttons')]" position="inside">
            <button type="button" class="btn btn-outline-dark" t-on-click="actionhrList">Download Report</button>
        </xpath>

    </t>
    <t t-name="school.modelPlanningBtn" t-inherit="planning.PlanningGanttView.Buttons" t-inherit-mode="extension">
        <xpath expr="//div" position="after">
            <button type="button" class="btn btn-outline-dark" t-on-click="actionPlanningList">Download Report</button>
        </xpath>
    </t>
    <t t-name="school.modelSaleBtn" t-inherit="web.ListView">
        <xpath expr="//t[@t-set-slot='control-panel-always-buttons']" position="inside">
            <button type="button" class="btn btn-outline-dark" t-on-click="actionSaleList">Download Report</button>
        </xpath>
    </t>
    <t t-name="school.modelSchoolBtn" t-inherit="web.ListView">
        <xpath expr="//t[@t-set-slot='control-panel-always-buttons']" position="inside">
            <button type="button" class="btn btn-outline-dark" t-on-click="actionSaleList">Download Report</button>
        </xpath>
    </t>
    <t t-name="school.autoFillBtn" t-inherit="web.FormView">
        <xpath expr="//div[@t-att-class='className']/div/Layout/t[@t-set-slot='layout-buttons']" position="inside">
            <button id="mybtn" class="btn btn-outline-dark" t-on-click="actionAutoFill" >Download Result
            </button>
        </xpath>
    </t>

